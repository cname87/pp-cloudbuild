 apiVersion: networking.k8s.io/v1beta1
 kind: Ingress
 metadata:
    name: pp-app-ingress
    annotations:
      kubernetes.io/ingress.class: "nginx"
      # Needed so paths routed correctly
      nginx.ingress.kubernetes.io/rewrite-target: /
 spec:
    tls:
      - secretName: pptest-com-tls
        hosts:
          - pptest.com
    backend:
      serviceName: pp-frontend-service
      servicePort: 80
    rules:
      # Host must match the host in tls
      - host: pptest.com
        http:
          paths:
            - path: /
              backend:
                serviceName: pp-frontend-service
                servicePort: 80
