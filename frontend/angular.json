{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "defaultProject": "project-perform",
  "projects": {
    "project-perform": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "pp",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles/styles.scss",
              "src/styles/themes.scss",
              /* regular style toast */
              "node_modules/ngx-toastr/toastr.css"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "zone.js/dist/zone-error"
            ],
            "buildOptimizer": false,
            "commonChunk": false, // NOTE: common chunk not created to prevent a common chunk being loaded initially (but results in some code duplication)
            "extractLicenses": false,
            "namedChunks": true,
            "optimization": false,
            "outputHashing": "none",
            "sourceMap": true,
            "vendorChunk": true,
            "inlineStyleLanguage": "scss"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "aot": true,
              "buildOptimizer": true,
              "commonChunk": false, // NOTE: common chunk not created to prevent a common chunk being loaded initially (but results in some code duplication)
              "extractLicenses": true,
              "sourceMap": true, // this is to enable the source maps to get a better analysis - set to false if no analysis needed.
              "namedChunks": true, // to get identify modules names and not use random numbers for lazy loading modules - set to false if no analysis needed.
              "optimization": true,
              "outputHashing": "all",
              "vendorChunk": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "10kb",
                  "maximumError": "100kb"
                }
              ]
            },
            "e2eTest": {
              "watch": false,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.e2e.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "project-perform:build",
            "proxyConfig": "proxy.conf.js"
          },
          "configurations": {
            "production": {
              "browserTarget": "project-perform:build:production"
            },
            "e2eTest": {
              "watch": false,
              "browserTarget": "project-perform:build:e2eTest"
            }
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {},
          "configurations": {
            "dev": {
              "devServerTarget": "project-perform:serve:e2eTest",
              "protractorConfig": "e2e/src/config/protractor-dev.conf.js"
            },
            "staging": {
              "devServerTarget": "project-perform:serve:e2eTest",
              "protractorConfig": "e2e/src/config/protractor-staging.conf.js"
            },
            "production": {
              "devServerTarget": "",
              "protractorConfig": "e2e/src/config/protractor-production.conf.js"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "project-perform:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "styles": [
              "src/styles/styles.scss",
              "src/styles/themes.scss"
            ],
            "scripts": [],
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ]
          },
          "configurations": {
            "dev": {
              "karmaConfig": "src/karma-dev.conf.js",
              "watch": true,
              "codeCoverage": true,
              "browsers": "Chrome"
            },
            "staging": {
              "karmaConfig": "src/karma-staging.conf.js",
              "watch": false,
              "codeCoverage": false,
              "browsers": "ChromeHeadlessNoSandbox"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "eslintConfig": ".eslintrc.js",
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "analyze": {
          "builder": "@ngx-builders/analyze:analyze",
          "options": {
            "outputPath": "dist"
          }
        }
      }
    }
  },
  "cli": {
    "warnings": {
      "typescriptMismatch": false
    },
    "analytics": false
  }
}
